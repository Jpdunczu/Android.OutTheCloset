<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="aksar.inji.outthecloset">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false"
        />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_real_launcher_icon"
        android:label="OutTheCloset"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Splashes.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".BrandListActivity">

        </activity>
        <activity android:name=".BrandActivity">

        </activity>
        <activity android:name=".ClothesListActivity"
            android:parentActivityName=".BrandListActivity">

        </activity>
        <activity android:name=".ClothesPagerActivity">

        </activity>
        <activity android:name=".ClothesActivity">

        </activity>
        <provider
            android:authorities="com.aksar.inji.outthecloset.fileprovider"
            android:name="android.support.v4.content.FileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/files"/>
        </provider>
    </application>

</manifest>